@model IEnumerable<FoodRepository.FoodModel.FoodItem>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Foodies</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="StyleSheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.1.js"></script>
    <style>
        .Box {
            display: flex;
            flex-wrap: wrap;
            column-gap: 4rem;
            row-gap: 5rem;
        }

        .thumb-wrapper {
            background-color: whitesmoke;
            padding: 8px;
        }

        #food-img {
            width: 200px;
            height: 200px;
        }

        .button {
            text-align: center;
        }

        .thumb-wrapper {
            box-shadow: 0 0 10px silver;
            transition: 300ms all;
        }

            .thumb-wrapper:hover {
                transform: scale(1.1);
            }

        #timer {
            float: right;
            margin-right: 25px;
            font-weight: bold;
        }


        .wrapper 
        {
            position: relative;
        }

        .wrapper span 
        {
                position: absolute;
                top: -2px;
                right: -2px;
                background-color: red;
                padding-left: 1px;
                padding-right: 1px;
                border-radius: 50%;
        }
    </style>
    <script>
        var FoodAppUrlSettings =
         {
            AddCartUrl: '@Url.Action("AddToCart", "Food")',
            GetNoOfCartItem: '@Url.Action("GetNoOfCartItem", "Food")'
         }

    </script>
</head>

<body>
    @Html.Partial("_NavBar")
    <p id="timer"></p>
    <div class="container">
        <br />
        <br />
        <div class="Box">
            @foreach (var item in Model)
            {
                <div class="thumb-wrapper">
                    <div class="img-box">
                        <img id="food-img" src=@item.ImagePath class="img-fluid" alt="">
                    </div>
                    <div class="thumb-content">
                        <h4 style="text-align:center;padding-top:3px;">@item.Name</h4>
                        <p class="item-price"><span><b>Rs.@item.Price</b></span></p>
                        <div class="button">

                            <button class="btn btn-info add-Item" id=@item.Id onclick="AddToCart(this);">Add to cart</button>
                        </div>

                    </div>
                </div>
            }
        </div>
        <br />
    </div>
    @Scripts.Render("~/CartScript/js")

</body>
</html>
