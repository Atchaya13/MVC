
@{
    Layout = null;
}
@model IEnumerable<Model.Book>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyLibrary</title>
    @*bootstrap*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    @*jquery*@
    <script src="https://code.jquery.com/jquery-3.6.1.js"></script>
    @*dt*@
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

</head>
<body>
    <div class="container">
        <button class="btn btn-primary" onclick="location.href='@Url.Action( "AddBook","Library")'">Add New Book</button>
        <br/>
        <table id="books-detail" class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Author</th>
                    <th scope="col">Price</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Update</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@Html.HiddenFor(model => book.BookId)</td>
                        <td>@Html.DisplayFor(model => book.Name)</td>
                        <td>@Html.DisplayFor(model => book.Author)</td>
                        <td>@Html.DisplayFor(model => book.Price)</td>
                        <td>
                        <button id="@book.BookId" class="delete" onclick="DeleteBook(this)">Delete</button>
                        </td>
                        <td>
                           
                            <button id="@Html.DisplayFor(mode => book.BookId)" class="btn btn-primary" onclick="location.href='@Url.Action( "UpdateView","Library",new {  id =book.BookId })';return false;">Update</button>
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
    @Scripts.Render("~/DisplayBooks/js")
<script>
        var MyAppUrlSettings = {
    MyUsefulUrl : '@Url.Action("DeleteDetail", "Library")'
    }
    var updateUrl =
    {
        url: '@Url.Action("Update")'
    }
</script>

</body>
</html>
