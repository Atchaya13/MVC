@model Model.Book
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateBook</title>
    @*bootstrap*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<body>
    <br />
    <div class="myContainner">
        @using (Html.BeginForm("UpdateBookDetails", "Library", FormMethod.Post))
        {
            <div class="form-outline">
                @Html.HiddenFor(model=>model.BookId)

                <label class="form-label" for="typeText">Book Name</label>
                <input type="text" id="book-name" class="form-control" name="Name" value="@Model.Name"/>
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                <label class="form-label" for="typeText">Author Name</label>
                <input type="text" id="author-name" class="form-control" name="Author" value="@Model.Author"/>
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })

                <label class="form-label" for="typeText">Price</label>
                <input type="text" id="price" class="form-control" name="Price" value="@Model.Price"/>
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                <br />
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        }

    </div>
</body>
</html>
