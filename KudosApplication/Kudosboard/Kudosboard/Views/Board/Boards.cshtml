@model IEnumerable<KudosBoardDatas.KudosboardModel.ViewModel.BoardVM>
@{
    ViewBag.Title = "Boards";
}

<script>
         var MyAppUrlSettings =
         {
            setView:'@Url.Action("DeleteDetail", "Assert")'
           
         }
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<style>
   
    .tabs {
        height: 1475px;
        width: 100%;
        text-align: left;
       
    }

    .tab-nav-wrapper {
        width: 100%;
        overflow-x: auto;
        position: relative !important;
        z-index: 999 !important;
        top: 3px;
        
    }

    .tabs ul {
        display: block;
        overflow-y: hidden;
        margin: 0px;
        padding-inline-start: 5px;
        
    }

        .tabs ul li {
            display: inline-block;
            border: 1px solid grey;
            border-bottom: 3px solid whitesmoke;
            background-color: white;
        }

            .tabs ul li.active {
                border: 1px solid black;
                border-bottom: 3px solid white;
            }

            .tabs ul li a {
                text-decoration: none;
                color: blue;
                padding: 10px;
                line-height: 25px;
                position: relative;
                font-weight: bold;
            }

    .tab-content-wrapper {
        position: relative !important;
        z-index: 1 !important;
        border: 2px solid whitesmoke;
        padding: 20px;
        min-height: 40px;
    }
</style>
@Html.Partial("_NavBar")
<div class="container">
    <br />
    <button style="float:right" class="btn btn-info" onclick="AddBoard();">  <i class="fa fa-plus"></i> New Board</button>
    <br />
    <div class="tabs">
        <div class="tab-nav-wrapper">
            <ul>
                <li class="active"><a href="#tab1">Given</a></li>
                <li><a href="#tab2">Received</a></li>
               
            </ul>
        </div>
        <div class="tab-content-wrapper">
            <div id="tab1" class="tab-content" style="display:none;background-color:whitesmoke" >
                <div class="container py-5" id="Created">
                    @foreach (var i in Model)
                    {
                        if (i.userId == Convert.ToInt32(Session["UserId"]))
                        {
                            <div class="row justify-content-center mb-3">
                                <div class="col-md-12 col-xl-10">
                                    <div class="card shadow-0 border rounded-3">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                                    <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                                        <img src="https://source.unsplash.com/random/200x200?sig= @i.Id"
                                                             class="w-100" />
                                                        <a href="#!">
                                                            <div class="hover-overlay">
                                                                <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 col-xl-6">
                                                    <h5 style="color:deepskyblue;text-align:center">@i.Name</h5>
                                                    <br />
                                                    <h6><b>Created By:</b>@i.CreatedBy</h6>
                                                    <h6>
                                                        <b>For:</b>
                                                        @i.Receipient
                                                    </h6>

                                                </div>
                                                <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                                    <div class="d-flex flex-row align-items-center mb-1">

                                                    </div>

                                                    <div class="d-flex flex-column mt-4">
                                                        <button class="btn btn-primary btn-sm" type="button">Edit</button>
                                                        <button class="btn btn-outline-primary btn-sm mt-2" type="button" onclick="location.href='@Url.Action( "BoardView","Board",new {  id =i.Id })';">
                                                           View
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }

                </div>
            </div>
            <div id="tab2" class="tab-content" style="display:none;">
                <div class="container py-5" id="Created">
                    @foreach (var i in Model)
                    {
                        if (i.Receipient.Contains(Session["UserName"].ToString()))
                        {
                            <div class="row justify-content-center mb-3">
                                <div class="col-md-12 col-xl-10">
                                    <div class="card shadow-0 border rounded-3">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                                    <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                                        <img src="https://source.unsplash.com/random/200x200?sig= @i.Id"
                                                             class="w-100" />
                                                        <a href="#!">
                                                            <div class="hover-overlay">
                                                                <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 col-xl-6">
                                                    <h5 style="color:deepskyblue;text-align:center">@i.Name</h5>
                                                    <br />
                                                    <h6><b>Created By:</b>@i.CreatedBy</h6>
                                                    <h6>
                                                        <b>For:</b>
                                                        @i.Receipient
                                                    </h6>

                                                </div>
                                                <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                                    <div class="d-flex flex-row align-items-center mb-1">

                                                    </div>

                                                    <div class="d-flex flex-column mt-4">
                                                        <button class="btn btn-primary btn-sm" type="button">Edit</button>
                                                        <button class="btn btn-outline-primary btn-sm mt-2" type="button">
                                                            View
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>
            </div>
            
        </div>
    </div>
    </div>


   
    
  


@Scripts.Render("~/KudosScript/js")

